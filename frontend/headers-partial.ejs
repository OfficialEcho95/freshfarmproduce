                            <option value="register">Register Here</option>
                            <option value="signin">Sign In</option>
                        </select> -->

                    <!-- Main button to trigger the dropdown -->
                    <button id="toggleButton" class="btn btn-primary">Click Me</button>

                    <!-- Dropdown menu that will display the 5 options -->
                    <div id="dropdownMenu" class="dropdown-content"
                        style="display: none; padding: 10px; background: #f9f9f9; border: 1px solid #ccc; width: 200px;">
                        <button id="purchases" class="btn btn-primary"
                            style="margin-bottom: 10px; width: 100%;">Purchases</button>
                        <button id="signin" class="btn btn-secondary" style="margin-bottom: 10px; width: 100%;">Sign
                            In</button>
                        <button id="dashboard" class="btn btn-info"
                            style="margin-bottom: 10px; width: 100%;">Dashboard</button>
                        <button id="settings" class="btn btn-warning"
                            style="margin-bottom: 10px; width: 100%;">Settings</button>
                        <button id="logout" class="btn btn-danger" style="margin-bottom: 10px; width: 100%;">Log
                            Out</button>
                    </div>

                    <script>
                        document.addEventListener("DOMContentLoaded", function () {
                            const toggleButton = document.getElementById("toggleButton");
                            const dropdownMenu = document.getElementById("dropdownMenu");

                            // Toggle the dropdown visibility when clicking the main button
                            toggleButton.addEventListener("click", function () {
                                dropdownMenu.style.display = dropdownMenu.style.display === "none" ? "block" : "none";
                            });

                            // Each option will redirect the user when clicked
                            document.getElementById("purchases").addEventListener("click", () => {
                                window.location.href = "/purchases                                                                                                                                                                                                                                                                                                                                                                                                      .html";
                            });

                            document.getElementById("signin").addEventListener("click", () => {
                                window.location.href = "/login.html";
                            });

                            document.getElementById("dashboard").addEventListener("click", () => {
                                window.location.href = "/dashboard.html";
                            });

                            document.getElementById("settings").addEventListener("click", () => {
                                window.location.href = "/settings.html";
                            });

                            document.getElementById("logout").addEventListener("click", async () => {
                                const response = await fetch('/api/v1/users/logout-user', {
                                    method: 'GET'
                                });
                                if (response.ok) {
                                    window.location.href = "/index.html"; // Redirect to login page after logout
                                } else {
                                    alert("Logout failed! Please try again.");
                                }
                            });
                        });
                    </script>

